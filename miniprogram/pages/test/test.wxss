/* pages/test/test.wxss */

/* 修复选项点击时的缩放问题 */
.option-item:active {
  transform: none !important;
  background: white !important;
}

.option-item.selected:active {
  background: linear-gradient(135deg, rgba(123, 104, 238, 0.15) 0%, rgba(147, 112, 219, 0.15) 100%) !important;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 600rpx;
  padding: 60rpx 40rpx;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.loading-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  animation: pulse 2s ease-in-out infinite;
}

.loading-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #4A5568;
  margin-bottom: 20rpx;
}

.loading-tip {
  font-size: 28rpx;
  color: #A0AEC0;
}

/* 开始测试界面 */
.start-container {
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.start-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.start-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  filter: drop-shadow(0 8rpx 24rpx rgba(123, 104, 238, 0.3));
}

.start-title {
  font-size: 56rpx;
  font-weight: 800;
  color: #2D3748;
  margin-bottom: 16rpx;
  text-align: center;
}

.start-subtitle {
  font-size: 32rpx;
  color: #7B68EE;
  font-weight: 600;
  text-align: center;
}

.start-content {
  width: 100%;
  margin-bottom: 60rpx;
}

.test-description {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.description-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 24rpx;
  display: block;
}

.description-text {
  font-size: 28rpx;
  color: #718096;
  line-height: 1.6;
  display: block;
  margin-bottom: 12rpx;
  padding-left: 20rpx;
  position: relative;
}

.description-text::before {
  content: '•';
  position: absolute;
  left: 0;
  color: #7B68EE;
  font-weight: bold;
}

.start-tips {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  width: 100%;
}

.tips-item {
  display: flex;
  align-items: center;
  background: rgba(123, 104, 238, 0.05);
  padding: 30rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.tips-item:active {
  background: rgba(123, 104, 238, 0.15);
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(123, 104, 238, 0.1);
  border-radius: 50%;
}

.tips-text {
  font-size: 28rpx;
  color: #4A5568;
  flex: 1;
}

.start-actions {
  display: flex;
  gap: 24rpx;
  width: 100%;
  margin-top: 20rpx;
}

/* 测试进行界面 */
.test-container {
  padding: 0 0 40rpx;
}

.test-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background: white;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left,
.header-right {
  display: flex;
  align-items: center;
}

.header-center {
  display: flex;
  align-items: center;
}

.nav-button {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  background: rgba(123, 104, 238, 0.05);
  transition: all 0.3s ease;
}

.nav-button:active {
  background: rgba(123, 104, 238, 0.15);
}

.nav-button.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.nav-icon {
  font-size: 24rpx;
  color: #7B68EE;
  margin-right: 8rpx;
}

.nav-text {
  font-size: 26rpx;
  color: #4A5568;
  font-weight: 500;
}

.timer-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3748;
  font-family: 'Courier New', monospace;
}

/* 进度条 */
.progress-section {
  padding: 30rpx 40rpx;
  background: white;
  margin-bottom: 40rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-text {
  font-size: 28rpx;
  color: #4A5568;
  font-weight: 600;
}

.progress-percent {
  font-size: 28rpx;
  color: #7B68EE;
  font-weight: 700;
}

.progress-bar {
  height: 12rpx;
  background: #E2E8F0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #7B68EE 0%, #9370DB 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 题目显示 */
.question-container {
  padding: 0 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.question-number {
  font-size: 28rpx;
  color: #718096;
  background: rgba(123, 104, 238, 0.1);
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

.question-category {
  font-size: 24rpx;
  color: #7B68EE;
  font-weight: 500;
}

.question-content {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.question-text {
  font-size: 32rpx;
  color: #2D3748;
  line-height: 1.6;
  font-weight: 500;
}

.options-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 40rpx 50rpx;
  border-radius: 20rpx;
  background: white;
  border: 2rpx solid #E2E8F0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  will-change: background-color, border-color, box-shadow;
  min-height: 160rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
}

/* 移除active状态避免点击时的视觉反馈 */
/* .option-item:active {
  background: rgba(123, 104, 238, 0.08);
} */

.option-item.selected {
  background: linear-gradient(135deg, rgba(123, 104, 238, 0.15) 0%, rgba(147, 112, 219, 0.15) 100%);
  border-color: #7B68EE;
  box-shadow: 0 4rpx 16rpx rgba(123, 104, 238, 0.2);
}

.option-label {
  width: 80rpx;
  height: 80rpx;
  min-width: 80rpx;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 700;
  background: white;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 2rpx solid #E2E8F0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  will-change: background, color, border-color, box-shadow;
  box-sizing: border-box;
  flex-shrink: 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0);
}

.option-item.selected .option-label {
  background: linear-gradient(135deg, #7B68EE 0%, #9370DB 100%);
  color: white;
  border-color: transparent;
  box-shadow: 0 4rpx 16rpx rgba(123, 104, 238, 0.4);
}

.option-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.option-text {
  font-size: 30rpx;
  color: #2D3748;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.option-dimension {
  font-size: 24rpx;
  color: #7B68EE;
  background: rgba(123, 104, 238, 0.05);
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  display: inline-block;
}

/* 底部导航 */
.test-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx 60rpx;
  background: white;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
  position: sticky;
  bottom: 0;
  z-index: 100;
}

.nav-button-secondary {
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  color: #4A5568;
  background: #F8F5FF;
  border: 2rpx solid #E2E8F0;
  border-radius: 50rpx;
  transition: all 0.3s ease;
}

.nav-button-secondary:active {
  background: #D1D5DB;
}

.nav-button-secondary.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.nav-button-primary {
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  color: white;
  background: linear-gradient(135deg, #7B68EE 0%, #9370DB 100%);
  border: none;
  border-radius: 50rpx;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(123, 104, 238, 0.3);
}

.nav-button-primary:active {
  background: linear-gradient(135deg, #6B5CE7 0%, #8B5CF6 100%);
  box-shadow: 0 4rpx 12rpx rgba(123, 104, 238, 0.4);
}

.footer-info {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.footer-progress {
  font-size: 26rpx;
  color: #718096;
}

/* 退出确认弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 200;
}

.modal-content {
  background: white;
  border-radius: 32rpx;
  padding: 50rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: 90%;
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.2);
  transform: scale(0.9);
  animation: modalIn 0.3s ease-out;
}

.modal-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2D3748;
}

.modal-body {
  margin-bottom: 40rpx;
}

.modal-text {
  font-size: 30rpx;
  color: #4A5568;
  line-height: 1.5;
  text-align: center;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
}

.modal-btn-secondary {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  color: #4A5568;
  background: #F8F5FF;
  border: 2rpx solid #E2E8F0;
  border-radius: 50rpx;
  transition: all 0.3s ease;
}

.modal-btn-secondary:active {
  background: #D1D5DB;
}

.modal-btn-primary {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  color: white;
  background: linear-gradient(135deg, #7B68EE 0%, #9370DB 100%);
  border: none;
  border-radius: 50rpx;
  transition: all 0.3s ease;
}

.modal-btn-primary:active {
  background: linear-gradient(135deg, #6B5CE7 0%, #8B5CF6 100%);
}

/* 动画效果 */
@keyframes pulse {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
  100% {
    opacity: 1;
  }
}

@keyframes modalIn {
  from {
    opacity: 0;
    transform: scale(0.8) translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: scale(0.9) translateY(0);
  }
}

/* 响应式设计 */
@media (max-width: 375px) {
  .start-title {
    font-size: 48rpx;
  }
  
  .start-subtitle {
    font-size: 28rpx;
  }
  
  .description-title {
    font-size: 28rpx;
  }
  
  .description-text {
    font-size: 26rpx;
  }
  
  .tips-icon {
    width: 50rpx;
    height: 50rpx;
    font-size: 28rpx;
  }
  
  .tips-text {
    font-size: 26rpx;
  }
  
  .question-text {
    font-size: 28rpx;
  }
  
  .option-text {
    font-size: 28rpx;
  }
  
  .option-dimension {
    font-size: 22rpx;
  }
}

/* 平板适配 */
@media (min-width: 768px) {
  .start-container,
  .test-container {
    max-width: 600rpx;
    margin: 0 auto;
  }
}