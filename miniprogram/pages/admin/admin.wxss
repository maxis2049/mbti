/* pages/admin/admin.wxss */
.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  color: white;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.8;
}

.content {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx;
  backdrop-filter: blur(10rpx);
  margin-bottom: 40rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #fff;
}

.description {
  display: block;
  font-size: 28rpx;
  line-height: 1.6;
  opacity: 0.9;
  white-space: pre-line;
}

.update-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(45deg, #ff6b6b, #ee5a24);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
}

.update-btn.updating {
  background: #95a5a6;
  box-shadow: none;
}

.update-btn:not(.updating):active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(255, 107, 107, 0.3);
}

.test-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(45deg, #74b9ff, #0984e3);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(116, 185, 255, 0.3);
  transition: all 0.3s ease;
}

.test-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(116, 185, 255, 0.3);
}

.home-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(45deg, #55a3ff, #003d82);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(85, 163, 255, 0.3);
  transition: all 0.3s ease;
}

.home-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(85, 163, 255, 0.3);
}

.status-box {
  background: rgba(0, 0, 0, 0.2);
  border-radius: 10rpx;
  padding: 30rpx;
  border-left: 8rpx solid #00b894;
}

.status-text {
  font-size: 26rpx;
  line-height: 1.5;
  white-space: pre-line;
  font-family: 'Courier New', monospace;
}

.footer {
  text-align: center;
  opacity: 0.7;
}

.footer-text {
  display: block;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.footer-text:last-child {
  margin-bottom: 0;
}