/* pages/index/index.wxss */

/* 欢迎区域 */
.welcome-section {
  margin: 60rpx 0 40rpx;
  text-align: center;
  position: relative;
}

.welcome-text {
  font-size: 56rpx;
  font-weight: 800;
  color: #2D3748;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.welcome-subtitle {
  font-size: 32rpx;
  color: #718096;
  line-height: 1.5;
  max-width: 600rpx;
  margin: 0 auto;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  padding: 20rpx 40rpx;
  background: linear-gradient(135deg, rgba(123, 104, 238, 0.1) 0%, rgba(147, 112, 219, 0.1) 100%);
  border-radius: 60rpx;
  border: 2rpx solid rgba(123, 104, 238, 0.2);
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid #7B68EE;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #4A5568;
}

/* 测试类型选择 */
.test-types-section {
  margin: 40rpx 0;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  position: relative;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(180deg, #7B68EE 0%, #9370DB 100%);
  border-radius: 4rpx;
}

.test-type-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.test-type-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.test-type-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #7B68EE 0%, #9370DB 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.test-type-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.test-type-card:active::before {
  opacity: 1;
}

.card-icon {
  font-size: 64rpx;
  margin-right: 32rpx;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(123, 104, 238, 0.1);
  border-radius: 50%;
  flex-shrink: 0;
}

.card-content {
  flex: 1;
}

.card-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.card-subtitle {
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 12rpx;
}

.card-description {
  font-size: 26rpx;
  color: #A0AEC0;
  line-height: 1.5;
}

.card-arrow {
  font-size: 32rpx;
  color: #CBD5E1;
  margin-left: 20rpx;
  transition: transform 0.3s ease;
}

.test-type-card:active .card-arrow {
  transform: translateX(8rpx);
}

/* 最近测试记录 */
.recent-tests-section {
  margin: 60rpx 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-left: 20rpx;
}

.section-header .section-title {
  margin-bottom: 0;
  flex: 1;
}

.view-all {
  font-size: 26rpx;
  color: #7B68EE;
  display: flex;
  align-items: center;
}

.recent-tests-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.recent-test-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.recent-test-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.test-result-type {
  font-size: 32rpx;
  font-weight: 700;
  color: #7B68EE;
  background: rgba(123, 104, 238, 0.1);
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  min-width: 120rpx;
  text-align: center;
}

.test-result-info {
  flex: 1;
}

.test-result-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3748;
  margin-bottom: 6rpx;
}

.test-result-time {
  font-size: 24rpx;
  color: #A0AEC0;
}

.test-result-arrow {
  font-size: 24rpx;
  color: #CBD5E1;
  margin-left: 16rpx;
}

/* 底部信息 */
.footer-section {
  margin: 80rpx 0 40rpx;
  text-align: center;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  border: 2rpx solid rgba(123, 104, 238, 0.1);
}

.footer-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.footer-text text {
  font-size: 24rpx;
  color: #718096;
  line-height: 1.4;
}

.footer-tips {
  font-size: 24rpx;
  color: #7B68EE;
  background: rgba(123, 104, 238, 0.1);
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  display: inline-block;
}

/* 分享按钮样式 */
.share-section {
  margin-top: 30rpx;
}

.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #7B68EE 0%, #9370DB 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(123, 104, 238, 0.3);
  transition: all 0.3s ease;
}

.share-btn::after {
  border: none;
}

.share-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(123, 104, 238, 0.4);
}

.share-icon {
  font-size: 32rpx;
}

.share-text {
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .welcome-text {
    font-size: 48rpx;
  }
  
  .welcome-subtitle {
    font-size: 28rpx;
  }
  
  .card-icon {
    width: 80rpx;
    height: 80rpx;
    font-size: 48rpx;
  }
  
  .card-title {
    font-size: 32rpx;
  }
  
  .card-subtitle {
    font-size: 22rpx;
  }
  
  .card-description {
    font-size: 24rpx;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.test-type-card {
  animation: fadeIn 0.6s ease-out;
  animation-fill-mode: both;
}

.test-type-card:nth-child(1) {
  animation-delay: 0.1s;
}

.test-type-card:nth-child(2) {
  animation-delay: 0.2s;
}

/* 快速导入按钮样式 */
.btn-admin.btn-quick {
  background: linear-gradient(135deg, #9370DB 0%, #7B68EE 100%);
  box-shadow: 0 4rpx 12rpx rgba(147, 112, 219, 0.3);
}
