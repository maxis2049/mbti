/* pages/profile/profile.wxss */

/* 用户信息区域 */
.user-section {
  padding: 60rpx 40rpx 40rpx;
}

.user-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
}

.user-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #7B68EE 0%, #9370DB 100%);
  opacity: 0.8;
}

.user-avatar-container {
  position: relative;
  margin-right: 32rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #F8F5FF;
  box-shadow: 0 8rpx 24rpx rgba(123, 104, 238, 0.2);
  transition: all 0.3s ease;
}

.user-avatar-container:active .user-avatar {
  transform: scale(0.95);
}

.avatar-edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 36rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #7B68EE 0%, #9370DB 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  border: 3rpx solid white;
  box-shadow: 0 4rpx 12rpx rgba(123, 104, 238, 0.3);
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 28rpx;
  color: #718096;
}

.user-actions {
  margin-left: 20rpx;
}

/* 统计信息 */
.stats-section {
  padding: 0 40rpx 40rpx;
}

.stats-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stats-number {
  font-size: 48rpx;
  font-weight: 800;
  color: #7B68EE;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
}

.divider {
  width: 2rpx;
  height: 80rpx;
  background: #E2E8F0;
}

/* 测试记录区域 */
.history-section {
  padding: 60rpx 40rpx 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2D3748;
  padding-left: 20rpx;
  position: relative;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(180deg, #7B68EE 0%, #9370DB 100%);
  border-radius: 4rpx;
}

.refresh-btn {
  background: rgba(123, 104, 238, 0.1);
  border: none;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  color: #7B68EE;
  transition: all 0.3s ease;
}

.refresh-btn:active {
  transform: scale(0.95);
  background: rgba(123, 104, 238, 0.2);
}

.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #718096;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #4A5568;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #718096;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

/* 测试记录列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.history-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.history-type {
  font-size: 32rpx;
  font-weight: 700;
  color: #7B68EE;
  background: rgba(123, 104, 238, 0.1);
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  min-width: 120rpx;
  text-align: center;
}

.history-info {
  flex: 1;
}

.history-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2D3748;
  margin-bottom: 8rpx;
}

.history-time {
  font-size: 24rpx;
  color: #A0AEC0;
}

.history-arrow {
  font-size: 24rpx;
  color: #CBD5E1;
  margin-left: 16rpx;
}

/* 推荐功能 */
.recommend-section {
  padding: 60rpx 40rpx 40rpx;
}

.recommend-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.recommend-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.recommend-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.recommend-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(123, 104, 238, 0.05);
  border-radius: 50%;
}

.recommend-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3748;
  margin-bottom: 8rpx;
}

.recommend-desc {
  font-size: 24rpx;
  color: #718096;
  line-height: 1.4;
}

/* 底部信息 */
.footer-section {
  margin: 80rpx 0 40rpx;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  border: 2rpx solid rgba(123, 104, 238, 0.1);
  text-align: center;
}

.footer-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.footer-text text {
  font-size: 24rpx;
  color: #718096;
  line-height: 1.4;
}

.footer-tips {
  font-size: 24rpx;
  color: #7B68EE;
  background: rgba(123, 104, 238, 0.1);
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  display: inline-block;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.history-item {
  animation: fadeIn 0.4s ease-out;
  animation-fill-mode: both;
}

.recommend-item {
  animation: fadeIn 0.5s ease-out;
  animation-fill-mode: both;
}

.recommend-item:nth-child(1) { animation-delay: 0.1s; }
.recommend-item:nth-child(2) { animation-delay: 0.2s; }
.recommend-item:nth-child(3) { animation-delay: 0.3s; }
.recommend-item:nth-child(4) { animation-delay: 0.4s; }

/* 响应式设计 */
@media (max-width: 750rpx) {
  .user-name {
    font-size: 32rpx;
  }
  
  .user-desc {
    font-size: 26rpx;
  }
  
  .stats-number {
    font-size: 40rpx;
  }
  
  .stats-label {
    font-size: 22rpx;
  }
  
  .history-title {
    font-size: 28rpx;
  }
  
  .history-time {
    font-size: 22rpx;
  }
  
  .recommend-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
}

/* 平板适配 */
@media (min-width: 768px) {
  .user-section,
  .stats-section,
  .history-section,
  .recommend-section {
    max-width: 600rpx;
    margin: 0 auto;
  }
  
  .recommend-grid {
    max-width: 600rpx;
  }
}